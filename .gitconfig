[akad]
    path = $(pwd)/.gitconfig

[alias]
    cc = !bash "$(dirname "$(git config --get akad.path)")/conventional-commit.sh"
    start-branch = !bash "$(dirname "$(git config --get akad.path)")/start-branch.sh"
    open-pr = !bash "$(dirname "$(git config --get akad.path)")/open-pr.sh"
